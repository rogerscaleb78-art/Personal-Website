@{
    ViewData["Title"] = "Contact Page";
}
<script src="https://cdn.jsdelivr.net/npm/tsparticles@2/tsparticles.bundle.min.js"></script>
<script type="module" src="/js/site.js"></script>
<script src="/js/tsparticlescontact.js"></script>
<script src="/js/styles.js"></script>
<!-- Particle Background -->
<div id="tsparticles-contact"></div>

<section id="contact-section" class="contact-section">
    <div class="contact-container">
        <h2>Contact Me</h2>

        <form id="contactForm" class="contact-form animate-on-scroll">
            <div class="form-group">
                <label for="name">Your Name</label>
                <input type="text" id="name" name="name" placeholder="Enter your name" required />
            </div>

            <div class="form-group">
                <label for="email">Email or Phone</label>
                <input type="text" id="email" name="email" placeholder="Email or phone number" required />
            </div>

            <div class="form-group">
                <label for="message">Your Message</label>
                <textarea id="message" name="message" rows="6" placeholder="Write your message here..." required></textarea>
            </div>

            <button type="submit" class="btn-send">Send</button>
        </form>

        <p id="form-status"></p>
    </div>
</section>

